{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2021",
		"lib": [
			"ES2021"
		],
		"sourceMap": true,
		"declaration": true,
		"allowJs": false,
		"rootDir": "src",
		"outDir": "dist",
		"strict": true,   /* enable all strict type-checking options */
		/* Import aliases */
		// baseUrl for relative imports does not work
		//"baseUrl": "src",
		/*"paths": {
			"@pscLib/*": [
				"*"
			]
		},*/

		/* Additional Checks */
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": false
	},
	"exclude": [
		"node_modules",
		"./out",
		"./dist",
		"src/tests"
	],
	"include": [
		"src/**/*.ts"
	]
}
