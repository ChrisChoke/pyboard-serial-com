{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2021",
		"lib": [
			"ES2021"
		],
		"sourceMap": true,
		"declaration": true,
		"allowJs": false,
		"rootDir": "src",
		"outDir": "dist",
		"strict": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": false,
		"moduleResolution": "node16"
	},
	"exclude": [
		"node_modules",
		"./out",
		"./dist",
		"src/tests"
	],
	"include": [
		"src/**/*.ts"
	]
}
